<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">Create A Court</h1>
    <div class="col-6 offset-3">
        <form action="/badmintoncourts" method="POST">
            <div class="mb-3">
                <label for="title">Title</label>
                <input
                    class="form-control"
                    type="text"
                    id="title"
                    name="badmintoncourt[title]"
                />
            </div>

            <div class="mb-3">
                <label for="title">City</label>
                <input
                    class="form-control"
                    type="text"
                    id="city"
                    name="badmintoncourt[city]"
                />
            </div>

            <div class="mb-3">
                <label for="title">Country</label>
                <input
                    class="form-control"
                    type="text"
                    id="country"
                    name="badmintoncourt[country]"
                />
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price Per Hour</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input
                        type="text"
                        class="form-control"
                        placeholder="0.00"
                        id="price"
                        aria-label="Username"
                        aria-describedby="price-label"
                        name="badmintoncourt[price]"
                    />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
            </div>
            <button>Submit</button>
        </form>

        <a href="/badmintoncourts">Back</a>
    </div>
</div>
